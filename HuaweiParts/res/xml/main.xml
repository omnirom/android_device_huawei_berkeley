<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="doze_category"
        android:title="@string/doze_category_title"
        android:summary="@string/doze_category_summary"
        android:persistent="false" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.device"
                android:targetClass="org.omnirom.device.DozeSettingsActivity" />
    </Preference>

    <PreferenceCategory
        android:title="@string/fp_gestures_title">
        <SwitchPreference
            android:key="fp_gestures_key"
            android:summary="@string/fp_gestures_summary"
            android:title="@string/fp_gestures_title" />
    </PreferenceCategory>
    
    <Preference
        android:key="gesture_category"
        android:title="@string/category_gestures_title"
        android:dependency="fp_gestures_key"
        android:summary="@string/category_gestures_summary"
        android:persistent="false" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.device"
                android:targetClass="org.omnirom.device.GestureSettingsActivity" />
    </Preference>
    
    <PreferenceCategory
        android:title="@string/touchscreen_title">
        <SwitchPreference
            android:key="high_touch_key"
            android:summary="@string/high_touch_summary"
            android:title="@string/high_touch_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/colour_temperature">
        <org.omnirom.device.ColourTempPreference
            android:key="colour_temp_key"
            android:title="@string/colour_temperature"
            android:summary="@string/colour_temperature" />

        <org.omnirom.device.preference.ColorSelectPreference
            android:key="colour_temp_rgb_key"
            ledPreview="false"
            android:title="@string/colour_temperature_rgb"
            android:persistent="false" />
    </PreferenceCategory>
</PreferenceScreen>
